{
  "name": "promise-loading-handler",
  "description": "A simple, reusable loading handler function for Promises",
  "version": "0.0.0-semantic-release",
  "license": "MIT",
  "repository": "https://github.com/kouts/promise-loading-handler",
  "author": "Giannis Koutsaftakis",
  "keywords": [
    "loader",
    "loading",
    "progress",
    "spinner",
    "promise",
    "handler"
  ],
  "main": "./dist/promise-loading-handler.umd.js",
  "module": "./dist/promise-loading-handler.es.js",
  "types": "./dist/types/createLoader.d.ts",
  "exports": {
    ".": {
      "import": "./dist/promise-loading-handler.es.js",
      "require": "./dist/promise-loading-handler.umd.js"
    }
  },
  "unpkg": "dist/promise-loading-handler.umd.js",
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint \"**/*.{vue,ts,js}\"",
    "lint-fix": "eslint --fix \"**/*.{vue,ts,js}\"",
    "test:unit": "jest",
    "test:unit-coverage": "jest --coverage && make-coverage-badge",
    "typecheck": "vue-tsc --noEmit",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.6",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/parser": "^5.30.7",
    "@vitejs/plugin-vue": "^3.0.1",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.0.2",
    "@vue/vue3-jest": "^28.0.1",
    "axios": "^0.27.2",
    "babel-jest": "^28.1.3",
    "eslint": "^8.20.0",
    "eslint-config-kouts": "^2.2.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-vue": "^9.2.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",    
    "lint-staged": "^13.0.3",
    "make-coverage-badge": "^1.2.0",
    "nprogress": "^0.2.0",
    "prettier": "^2.7.1",
    "rollup-plugin-delete": "^2.0.0",
    "ts-jest": "^28.0.7",
    "typescript": "^4.6.4",
    "vite": "^3.0.2",
    "vite-plugin-dts": "^1.4.0",
    "vue": "^3.2.37",
    "vue-eslint-parser": "^9.0.3",
    "vue-tsc": "^0.39.0"
  }
}
