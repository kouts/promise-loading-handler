{
  "name": "promise-loading-handler",
  "description": "A simple, reusable loading handler function for Promises",
  "version": "0.0.0-semantic-release",
  "license": "MIT",
  "repository": "https://github.com/kouts/promise-loading-handler",
  "packageManager": "pnpm@10.20.0",
  "type": "module",
  "author": "Giannis Koutsaftakis",
  "keywords": [
    "loader",
    "loading",
    "progress",
    "spinner",
    "promise",
    "handler"
  ],
  "main": "./dist/promise-loading-handler.umd.js",
  "module": "./dist/promise-loading-handler.es.js",
  "types": "./dist/types/createLoader.d.ts",
  "exports": {
    ".": {
      "import": "./dist/promise-loading-handler.es.js",
      "require": "./dist/promise-loading-handler.umd.js"
    }
  },
  "unpkg": "dist/promise-loading-handler.umd.js",
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint \"**/*.{vue,ts,js}\"",
    "lint-fix": "eslint --fix \"**/*.{vue,ts,js}\"",
    "test:unit": "jest",
    "test:unit-coverage": "jest --coverage && make-coverage-badge",
    "typecheck": "vue-tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@kouts/eslint-config": "^3.0.9",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/nprogress": "^0.2.3",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/vue3-jest": "^29.2.6",
    "axios": "^1.13.2",
    "babel-jest": "^30.2.0",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "make-coverage-badge": "^1.2.0",
    "nprogress": "^0.2.0",
    "prettier": "^3.6.2",
    "rollup-plugin-delete": "^3.0.1",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vue": "^3.5.24",
    "vue-tsc": "^3.1.3"
  }
}
