{
  "name": "promise-loading-handler",
  "description": "A simple, reusable loading handler function for Promises",
  "version": "0.0.0-semantic-release",
  "license": "MIT",
  "repository": "https://github.com/kouts/promise-loading-handler",
  "author": "Giannis Koutsaftakis",
  "keywords": [
    "loader",
    "loading",
    "progress",
    "spinner",
    "promise",
    "handler"
  ],
  "main": "./dist/promise-loading-handler.umd.js",
  "module": "./dist/promise-loading-handler.es.js",
  "types": "./dist/types/createLoader.d.ts",
  "exports": {
    ".": {
      "import": "./dist/promise-loading-handler.es.js",
      "require": "./dist/promise-loading-handler.umd.js"
    }
  },
  "unpkg": "dist/promise-loading-handler.umd.js",
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint \"**/*.{vue,ts,js}\"",
    "lint-fix": "eslint --fix \"**/*.{vue,ts,js}\"",
    "test:unit": "jest",
    "test:unit-coverage": "jest --coverage && make-coverage-badge",
    "typecheck": "vue-tsc --noEmit",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@rushstack/eslint-patch": "^1.1.3",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.30",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.0.0-rc.21",
    "@vue/vue3-jest": "^27.0.0",
    "axios": "^0.27.2",
    "babel-jest": "^27.5.1",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-prettier-vue": "^3.1.0",
    "eslint-plugin-vue": "^8.7.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.1",
    "make-coverage-badge": "^1.2.0",
    "nprogress": "^0.2.0",
    "prettier": "^2.6.2",
    "rollup-plugin-delete": "^2.0.0",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.4",
    "vite": "^2.9.6",
    "vite-plugin-dts": "^1.1.1",
    "vue": "^3.2.33",
    "vue-tsc": "^0.34.11"
  }
}
